{
    "name": "ts-env-template",
    "version": "1.0.0",
    "description": "boilerplate for typescript and env setup",
    "main": "index.ts",
    "author": "Jitu Nayak",
    "license": "MIT",
    "private": false,
    "scripts": {
        "start": "NODE_ENV=prod node build/index.js",
        "build": "tsc -p tsconfig.json",
        "dev": "NODE_ENV=dev ts-node src/index.ts",
        "format": "yarn prettier --write ./src",
        "prepare": "husky install",
        "lint": "eslint . --ext .ts"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/node": "^17.0.42",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "dotenv": "^16.0.1",
        "eslint": "^8.17.0",
        "husky": "^8.0.1",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.3",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.3"
    }
}
